<%= form_for @post do |f| %>
	
	<% if @post.errors.any?%>
		<h2> pluralize(@post.errors.count,"error") previnimos de salvar o post </h2>
		#passando pelos erros
		<ul>	
			<% @post.errors.full_messages.each do |msg|%>
			<li> <%= msg %> </li>
			<%end%>
		</ul>		
	<%end%>

	<%= f.label :title %><br>
	<%= f.text_field :title %>

	<br>
	<br>

	<%= f.label :content, "Escreva seu post aqui" %><br>
	<%= f.text_field :content %>

	<br>
	<br>

	<%= f.submit%>
<%end%>